<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context="com.asking91.app.ui.basepacket.choose.ChooseActivity">

    <include layout="@layout/common_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/choose_course_ly"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_12"
            android:paddingRight="@dimen/space_12"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/basepacket_choose_course"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/colorText_88"
                android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/textSize_16"
                    android:paddingRight="@dimen/space_16"
                    android:textColor="@color/theme_blue_theme"
                    android:id="@+id/choose_course_tv"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/choose_class_ly"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_12"
            android:paddingRight="@dimen/space_12"
            android:layout_marginTop="@dimen/space_2"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/basepacket_choose_class"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/colorText_88"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/textSize_16"
                android:paddingRight="@dimen/space_16"
                android:textColor="@color/theme_blue_theme"
                android:id="@+id/choose_class_tv"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/arrow_right"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/choose_knowledge_ly"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_12"
            android:paddingRight="@dimen/space_12"
            android:layout_marginTop="@dimen/space_2"
            android:layout_weight="3"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/basepacket_choose_knowledge"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorText_88"
                android:textSize="@dimen/textSize_16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:gravity="right"
                android:ellipsize="marquee"
                android:focusable="true"
                android:layout_weight="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusableInTouchMode="true"
                android:paddingLeft="30dp"
                android:textSize="@dimen/textSize_16"
                android:paddingRight="@dimen/space_16"
                android:textColor="@color/theme_blue_theme"
                android:id="@+id/choose_knowledge_tv"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/arrow_right"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingLeft="@dimen/space_5"
        android:paddingBottom="@dimen/space_3"
        android:paddingRight="@dimen/space_5">

        <Button
            android:id="@+id/open_knowledge_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@mipmap/next_btn_bg"
            android:textSize="@dimen/textSize_18"
            android:text="@string/next_step"/>
    </LinearLayout>
</LinearLayout>
