<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:layout_below="@+id/score_ly"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="xxx"
            android:id="@+id/user_test_tv"
            android:textAlignment="center"
            android:textSize="@dimen/textSize_18"
            android:textColor="@color/colorText_56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/space_24"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/km_tv"
            android:text="xxxxx"
            android:textSize="@dimen/textSize_14"
            android:textColor="@color/colorText_88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="-"
            android:layout_marginLeft="@dimen/space_10"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/colorText_88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/version_tv"
            android:text="xxxxx"
            android:layout_marginLeft="@dimen/space_10"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/colorText_88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="-"
            android:layout_marginLeft="@dimen/space_10"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/colorText_88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/classLevel_tv"
            android:text="nj"
            android:textSize="@dimen/textSize_14"
            android:layout_marginLeft="@dimen/space_10"
            android:textColor="@color/colorText_88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="用时："
            android:layout_marginLeft="@dimen/space_10"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/colorText_88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time_tv"
            android:text="00:03"
            android:layout_marginLeft="@dimen/space_5"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/colorText_88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginRight="@dimen/space_10"
            android:layout_width="match_parent"
            android:background="@color/colorTest_fb"
            android:layout_height="@dimen/space_2"/>
        <LinearLayout
            android:layout_marginTop="@dimen/space_43"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/test_result_rv"
                android:overScrollMode="never"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/answer_detail_btn"
        android:text="@string/onlinttest_ask_result_answer_detail"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_16"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_marginRight="@dimen/space_5"
        android:layout_marginBottom="@dimen/space_3"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/next_btn_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/score_ly"
        android:layout_marginTop="32dp"
        android:background="@mipmap/ask_result_score_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_10"
        android:layout_below="@+id/toolBar"
        android:gravity="center"
        android:layout_centerHorizontal="true">
        <TextView
            android:text="0"
            android:layout_gravity="center_vertical"
            android:id="@+id/ask_result_score"
            android:textSize="@dimen/textSize_50"
            android:layout_width="wrap_content"
            android:textColor="@color/red"
            android:textStyle="italic"
            android:layout_height="wrap_content" />
        <TextView
            android:text="分"
            android:layout_marginTop="@dimen/space_10"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/textSize_25"
            android:layout_width="wrap_content"
            android:textColor="@color/red"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>