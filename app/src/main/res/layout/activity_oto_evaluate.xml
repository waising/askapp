<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <include layout="@layout/activity_oto_detail_head"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/user_img_iv"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/ic_tea_img"/>

            <TextView
                android:id="@+id/teacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_18"
                android:layout_toRightOf="@+id/user_img_iv"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/colorText_56"
                android:textSize="@dimen/textSize_16"/>

            <CheckBox
                android:id="@+id/cb_favor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/oto_end_star"
                android:button="@null"/>
        </RelativeLayout>

        <include
            layout="@layout/layout_line"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <include layout="@layout/layout_line"/>


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:paddingBottom="@dimen/space_10"
                android:paddingTop="@dimen/space_10"
                android:textColor="@color/colorText_56"
                android:textSize="@dimen/textSize_16"/>

            <include layout="@layout/layout_line"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/space_16"
            android:paddingTop="@dimen/space_16">

            <TextView
                android:id="@+id/t4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="@string/oto_end_t4"
                android:textColor="@color/colorText_88"
                android:textSize="@dimen/textSize_16"/>

            <TextView
                android:id="@+id/tv_askmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColor="@color/theme_blue_theme"
                android:textSize="@dimen/textSize_16"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_16"
            android:paddingLeft="@dimen/space_20"
            android:paddingTop="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_10"
                android:paddingTop="@dimen/space_10"
                android:text="老师提要"
                android:textColor="@color/colorText_88"
                android:textSize="@dimen/textSize_14"/>

            <include layout="@layout/layout_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_10"
                android:paddingTop="@dimen/space_10"
                android:textColor="@color/colorText_33"
                android:textSize="@dimen/textSize_16"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>