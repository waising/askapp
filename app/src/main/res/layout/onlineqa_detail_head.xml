<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/reply_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <include layout="@layout/common_avatar"
                android:layout_width="27.3dp"
                android:layout_height="27.3dp"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText_89"
                android:textSize="@dimen/textSize_16"
                android:layout_marginTop="15.3dp"
                android:layout_marginBottom="15.3dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_img_iv"
                android:layout_toLeftOf="@+id/time"
                android:layout_marginLeft="9dp"
                android:text="用户名"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_line"
                android:textSize="13.3sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="2016-11-1 9:17:30"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:gravity="top"
            android:layout_marginTop="11.7dp"
            android:text="题目"
            android:textColor="@color/colorText_c7"
            android:textSize="@dimen/textSize_16" />

        <include
            layout="@layout/common_mathview_maxheight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="12.3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12.3dp"
            android:background="@color/online_item_line"
            android:orientation="horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10.7dp"
            android:layout_marginBottom="11dp">

            <TextView
                android:id="@+id/version_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="【数学-七年级】"
                android:textColor="@color/colorText_88"
                android:textSize="13.3sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15.3dp"
                    android:drawableLeft="@mipmap/item_onlineqalist_ask"
                    android:drawablePadding="8.7dp"
                    android:text="0"
                    android:textColor="@color/online_item_ask"
                    android:textSize="13.3sp" />

                <TextView
                    android:id="@+id/a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17dp"
                    android:drawableLeft="@mipmap/item_onlineqalist_a"
                    android:drawablePadding="8.7dp"
                    android:text="0"
                    android:textColor="@color/online_item_a"
                    android:textSize="13.3sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/anwser_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_18"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginBottom="@dimen/space_10"
            android:textSize="13.3dp"
            android:textColor="@color/colorText_88"
            android:text="回答（共 0 条）"/>
    </RelativeLayout>

</LinearLayout>