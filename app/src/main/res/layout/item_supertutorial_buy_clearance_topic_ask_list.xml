<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topic_option_ly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="@mipmap/rech_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/topic_option_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/textSize_16"
        android:textColor="@color/colorText_56"
        android:layout_marginLeft="@dimen/space_14"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_2"
        android:textSize="@dimen/textSize_16"
        android:textColor="@color/colorText_56"
        android:layout_toRightOf="@+id/topic_option_tv"
        android:text="." />

    <include
        layout="@layout/common_math"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_14"
        android:layout_marginRight="@dimen/space_14"
        android:layout_toLeftOf="@+id/ask_state_iv"
        android:layout_toRightOf="@+id/point" />

    <ImageView
        android:id="@+id/ask_state_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_18"
        android:src="@mipmap/ask_right"
        android:visibility="invisible" />
</RelativeLayout>
