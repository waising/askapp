<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_toolbar"/>

    <ImageView
        android:id="@+id/img"
        android:layout_marginTop="@dimen/space_55"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ask_card_img"/>
    <TextView
        android:id="@+id/t"
        android:layout_marginTop="@dimen/space_20"
        android:text="@string/onlinetest_ask_card"
        android:layout_below="@+id/img"
        android:textColor="@color/colorText_56"
        android:textSize="@dimen/textSize_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_marginTop="@dimen/space_50"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_below="@+id/t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/test_card_rv"
            android:overScrollMode="never"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <Button
        android:id="@+id/commit_ask_topic"
        android:text="@string/onlinttest_ask_card_commit"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_16"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_marginRight="@dimen/space_5"
        android:layout_marginBottom="@dimen/space_3"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/next_btn_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>