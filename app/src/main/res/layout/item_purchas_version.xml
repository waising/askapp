<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="28dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/version_iv"
            android:layout_width="67dp"
            android:layout_height="96dp"
            android:src="@mipmap/ic_no_pic" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_grade_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="@dimen/space_12"
        android:text="fdfdfdfd"
        android:textColor="@color/colorText_56"
        android:textSize="@dimen/space_10" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_grade_name"
        android:layout_marginTop="@dimen/space_12"
        android:text="fdfdfdfd"
        android:textColor="#fbb474"
        android:textSize="@dimen/space_10" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_coupon"
        android:elevation="5dp"/>
</RelativeLayout>