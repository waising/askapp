<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View style="@style/view_line" />

    <TextView
        android:id="@+id/tv_all_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginTop="@dimen/space_20"
        android:text="因式分解"
        android:textColor="@color/colorText_56"
        android:textSize="@dimen/textSize_16" />

    <TextView
        android:id="@+id/tv_all_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_all_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_30"
        android:text="04-02"
        android:textColor="@color/colorText_c7"
        android:textSize="@dimen/textSize_12" />


    <View
        android:id="@+id/view_line"
        style="@style/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@+id/tv_all_name"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_18" />

    <LinearLayout
        android:id="@+id/ll_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:clickable="false"
            android:padding="@dimen/space_10"
            android:text="展开查看课程"
            android:textColor="@color/colorText_c7"
            android:textSize="@dimen/textSize_12" />

        <ImageView
            android:id="@+id/iv_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_expand" />
    </LinearLayout>

    <View
        style="@style/view_line"
        android:layout_below="@+id/ll_expand" />
</RelativeLayout>