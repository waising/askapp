<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_rel"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="312dp"
        android:layout_marginLeft="@dimen/login_padding"
        android:layout_marginRight="@dimen/login_padding">
        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0.3"
            android:orientation="vertical"
            android:background="@color/login_line"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入手机号"
            android:visibility="gone"
            android:textColor="@color/colorText_56"
            android:gravity="center"/>
        <!--<HorizontalScrollView-->
            <!--android:id="@+id/scrollView"-->
            <!--android:layout_width="300dp"-->
            <!--android:layout_height="60dp"-->
            <!--android:scrollbars="none">-->
        <LinearLayout
            android:id="@+id/inputLayout"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <RelativeLayout
                android:id="@+id/inputLayout1"
                android:layout_width="312dp"
                android:layout_height="52dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </RelativeLayout>
                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_phone"
                    android:layout_marginLeft="@dimen/space_14"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/login_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/icon1"
                    android:layout_marginLeft="@dimen/space_16"
                    android:textSize="@dimen/textSize_18"
                    android:padding="@dimen/space_8"
                    android:textColor="@color/login_text"
                    android:layout_toLeftOf="@+id/account_img"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="@string/login_hint1"
                    android:textColorHint="@color/login_line"
                    android:background="@null"
                    />
                <ImageView
                    android:id="@+id/account_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="@dimen/space_5"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/space_16"
                    android:src="@drawable/back2"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/inputLayout2"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/tmpl1"
                    android:layout_width="300dp"
                    android:layout_height="52dp"
                    android:layout_alignParentTop="true">
                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/login_pass"
                        android:layout_marginLeft="@dimen/space_14"
                        android:layout_centerVertical="true"/>
                    <EditText
                        android:id="@+id/login_pass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/icon2"
                        android:layout_marginLeft="@dimen/space_16"
                        android:padding="@dimen/space_8"
                        android:textSize="@dimen/textSize_18"
                        android:hint="@string/login_hint2"
                        android:textColorHint="@color/login_line"
                        android:maxLines="1"
                        android:textColor="@color/login_text"
                        android:background="@null"
                        android:layout_toLeftOf="@+id/pass_img"
                        android:inputType="textPassword"
                        android:text=""
                        />

                    <ImageView
                        android:id="@+id/pass_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/space_16"
                        android:padding="@dimen/space_5"
                        android:scaleType="centerInside"
                        android:src="@drawable/back2"/>
                </RelativeLayout>
                <CheckBox
                    android:id="@+id/login_remember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_below="@+id/tmpl1"
                    android:layout_marginTop="@dimen/home_viewpager_indicator"
                    android:text="@string/login_remember"
                    android:visibility="gone"
                    android:textColor="@color/colorText_56"
                    android:drawablePadding="@dimen/padding_editText"
                    android:button="@drawable/checbox_register"/>

            </RelativeLayout>
            <!--<RelativeLayout
                android:id="@+id/inputLayout3"
                android:layout_width="300dp"
                android:layout_height="60dp"
                >
                <EditText
                    android:id="@+id/login_rand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/login_text"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:background="@color/colorAccent"
                    android:layout_toLeftOf="@+id/rand_img"
                    android:inputType="numberPassword"
                    android:text="123456789"
                    />
                <ImageView
                    android:id="@+id/rand_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/back2"/>
            </RelativeLayout>-->
        </LinearLayout>
        <!--</HorizontalScrollView>-->
        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0.3"
            android:orientation="vertical"
            android:background="@color/login_line"/>
    </LinearLayout>
    <TextView
        android:id="@+id/goMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_gomain"
        android:textColor="@color/login_gomain"
        android:textSize="@dimen/textSize_16"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_24"/>

    <TextView
        android:id="@+id/login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即注册"
        android:textColor="@color/login_gomain"
        android:textSize="@dimen/textSize_16"
        android:padding="@dimen/padding_common"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>