<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/common_toolbar"/>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@mipmap/school_info_tv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginTop="@dimen/space_60"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10">
        <ImageView
            android:src="@mipmap/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/name"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="@string/school_info_name"
            android:textColorHint="@color/colorText_c7"
            android:textColor="@color/colorText_88"
            android:textSize="@dimen/textSize_16"
            android:background="@null"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@mipmap/school_info_tv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginTop="@dimen/space_17"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10">
        <ImageView
            android:src="@mipmap/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/school_local"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="@string/school_info_local"
            android:textColorHint="@color/colorText_c7"
            android:textColor="@color/colorText_88"
            android:textSize="@dimen/textSize_16"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@mipmap/school_info_tv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginTop="@dimen/space_17"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10">
        <ImageView
            android:src="@mipmap/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/school_name"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="@string/school_info_school"
            android:textColorHint="@color/colorText_c7"
            android:textColor="@color/colorText_88"
            android:textSize="@dimen/textSize_16"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/school_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_16"
        android:layout_marginTop="@dimen/space_35"
        android:text="@string/school_info"
        android:background="@drawable/btn_pay_ask_class"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/school_info_notice"
        android:layout_marginTop="@dimen/space_14"
        android:layout_gravity="center"
        android:textSize="@dimen/textSize_14"
        android:textColor="@color/color_ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>