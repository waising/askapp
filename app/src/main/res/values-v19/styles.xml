<resources>

    <style name="AppTheme" parent="BlueTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@mipmap/background</item>
    </style>

    <!-- Base application theme. -->
    <style name="FullTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
        <!-- 启动白背景问题-->
        <item name="android:windowBackground">@mipmap/background</item>
    </style>

    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/asking91Status</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="asking91Background">@color/colorPrimary</item>
        <item name="asking91ToolbarText">@color/theme_blue_toolbar_text</item>
        <item name="asking91Badge">@color/theme_blue_badge</item>
        <item name="asking91Status">@color/theme_blue_status</item>
        <item name="asking91TextCommonColor">@color/theme_blue_text_common</item>
        <item name="asking91TextContentColor">@color/theme_blue_text_content</item>
        <item name="asking91Theme">@color/theme_blue_theme</item>
        <item name="asking91FloatBtn">@color/theme_blue_float_btn</item>

        <item name="navIcon">@mipmap/ic_actionbar_menu</item>
        <item name="navBackIcon">@mipmap/ic_action_return</item>
        <item name="overFlowIcon">@mipmap/ic_actionbar_menu_more</item>
        <item name="menuSearch">@mipmap/ic_actionbar_search</item>
        <item name="menuNotice">@mipmap/ic_actionbar_notice</item>
        <item name="menuShare">@mipmap/ic_action_share</item>
        <item name="menuSend">@mipmap/ic_send_white</item>

        <item name="menuBasepacket">@mipmap/ic_action_share</item>
        <item name="menuOtoAskInfo">@mipmap/otoask_more</item>
        <item name="menuOnlinetestNode">@mipmap/node_add</item>
        <item name="menuOnlinetestAskcard">@mipmap/ask_card</item>
        <item name="menuRefer">@mipmap/love</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Custom_Main_Theme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Custom_Theme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.ToolBar.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textColorPrimary">@color/colorText_56</item>
        <item name="android:buttonStyleInset">@color/text_white</item>
    </style>

    <style name="Custom.Theme.ToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="ActionButton.Overflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">?attr/overFlowIcon</item>
        <item name="android:color">@android:color/white</item>
    </style>

    <style name="toolbar_textAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/textSize_18</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- 弹出框 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

</resources>
